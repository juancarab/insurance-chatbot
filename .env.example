# --- Configuración de OpenSearch ---
OPENSEARCH_VERSION=2.12.0
OPENSEARCH_DASHBOARD_PORT=9600
OPENSEARCH_PORT=9200
OPENSEARCH_HOST=opensearch
OPENSEARCH_INDEX=policies
OPENSEARCH_EMBED_DIM=384

# --- Claves API (Reemplaza con tus claves reales) ---
TAVILY_API_KEY= "key_goes_here"
GEMINI_API_KEY= "key_goes_here"
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# --- Configuración del Frontend ---
INSURANCE_CHATBOT_API_URL=http://backend:8000/chat
STREAMLIT_SERVER_HEADLESS=true
FRONTEND_PORT=8501

# --- Configuración del Backend ---
INSURANCE_CHATBOT_FORMATTER=langchain
INSURANCE_CHATBOT_LANGCHAIN_RUNNER=agent.app.langchain_runner:run_langchain_agent
BACKEND_PORT=8000

# --- Configuración de Herramientas ---
WEB_SEARCH_MAX_RESULTS=5
WEB_SEARCH_FRESHNESS_DAYS=30

# --- Configuración de Gemini ---
GEMINI_TEMPERATURE=0.2
GEMINI_TOP_P=0.95
GEMINI_MODEL=gemini-2.5-flash
GEMINI_MAX_OUTPUT_TOKENS=1024

# --- Configuración S3 (para el pipeline) ---
S3_AWS_ACCESS_KEY_ID=your-access-key-id
S3_AWS_SECRET_ACCESS_KEY=your-secret-access-key

# --- Valores Opcionales de la ingesta ---
CHUNK_SIZE=1000
CHUNK_OVERLAP=240
OPENSEARCH_USER=admin
OPENSEARCH_PASSWORD=admin
PDF_DIR=./data/raw_policies
POLICY_SUMMARIES_INDEX=policy_summaries_index
